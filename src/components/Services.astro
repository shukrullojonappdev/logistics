<style scoped>
  .swiper {
    max-width: 600px;
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    height: 600px;
    width: 400px;
  }
  .swiper-slide-active img {
    width: 100% !important;
    height: 100% !important;
  }

  .swiper-slide img {
    transition-duration: 300ms;
    display: block;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    height: 90%;
    object-fit: cover;
    border-radius: 24px;
  }

  @media (max-width: 700px) {
    .swiper {
      max-width: 300px;
    }
    .swiper-slide {
      height: 400px;
      width: 250px;
    }
  }
</style>
