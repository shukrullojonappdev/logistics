<section class="bg-blue-50 py-20">
  <div class="max-w-[1172px] px-4 h-full mx-auto">
    <div class="grid lg:grid-cols-2 grid-cols-1">
      <div
        class="col-span-1 flex flex-col justify-center lg:items-start items-center lg:text-left text-center mb-12"
      >
        <h3 class="text-3xl lg:text-4xl font-title text-blue-600">
          Our Services
        </h3>
        <p class="text-gray-500 font-body font-medium leading-6 mt-4 max-w-96">
