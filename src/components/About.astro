---
import { Image } from "astro:assets";
import about_img_1 from "../assets/images/ernesto-leon-4H_I-HRjkyA-unsplash.jpg";
import about_img_2 from "../assets/images/pat-whelen-NxM3zUWHFoI-unsplash.jpg";
import about_img_3 from "../assets/images/arno-senoner-yqu6tJkSQ_k-unsplash.jpg";
---

<section class="py-20">
  <div class="max-w-[1172px] px-4 h-full mx-auto">
    <div class="mb-4">
      <h2 class="text-3xl lg:text-4xl text-center font-title text-blue-600">
        About Us
      </h2>
    </div>
    <div class="flex flex-col flex-wrap justify-center">
      <div class="parallax_1 flex lg:flex-row flex-col py-6 mb-4">
        <div class="overflow-hidden relative flex-1 h-[400px] rounded-2xl">
          <Image
            src={about_img_1}
            alt="about image 1"
            class="img absolute top-0 left-0 h-[800px] w-full object-cover"
          />
        </div>
        <div
          class="flex-1 flex flex-col items-center justify-center m-4 text-center"
        >
          <h5 class="text-xl font-semibold text-blue-500 font-title">Safety</h5>
          <p class="font-body leading-6 font-medium text-gray-500 mt-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo
            voluptates dignissimos quae quaerat repellendus tenetur.
          </p>
        </div>
      </div>
      <div class="parallax_2 flex lg:flex-row-reverse flex-col py-6 mb-4">
        <div class="overflow-hidden relative flex-1 h-[400px] rounded-2xl">
          <Image
            src={about_img_2}
            alt="about image 1"
            class="img absolute top-0 left-0 h-[800px] w-full object-cover"
          />
        </div>
        <div
          class="flex-1 flex flex-col items-center justify-center m-4 text-center"
        >
          <h5 class="text-xl font-semibold text-blue-500 font-title">
            Shippers
          </h5>
          <p class="font-body leading-6 font-medium text-gray-500 mt-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo
            voluptates dignissimos quae quaerat repellendus tenetur.
          </p>
        </div>
      </div>
      <div class="parallax_3 flex lg:flex-row flex-col py-6 mb-4">
        <div class="overflow-hidden relative flex-1 h-[400px] rounded-2xl">
          <Image
            src={about_img_3}
            alt="about image 1"
            class="img absolute top-0 left-0 h-[800px] w-full object-cover"
          />
        </div>
        <div
          class="flex-1 flex flex-col items-center justify-center m-4 text-center"
        >
          <h5 class="text-xl font-semibold text-blue-500 font-title">Base</h5>
          <p class="font-body leading-6 font-medium text-gray-500 mt-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo
            voluptates dignissimos quae quaerat repellendus tenetur.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
